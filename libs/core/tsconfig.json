{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "lib": ["esnext"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
}
