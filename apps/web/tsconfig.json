{
    "extends": ["@todo-go/core/tsconfig.json", "@vue/tsconfig/tsconfig.json"],
    "compilerOptions": {
        "target": "esnext",
        "verbatimModuleSyntax": false,
        "module": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "jsx": "preserve",
        "sourceMap": true,
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "types": ["vitest/globals"],
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
