LABEL authors="da-max"

FROM node:20-slim as base
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"

RUN corepack enable

WORKDIR /app

COPY .npmrc pnpm-workspace.yaml ./
RUN mkdir -p apps/web apps/mobile
COPY apps/web/package.json ./apps/web/package.json
COPY apps/mobile/package.json ./apps/mobile/package.json

FROM base as install

RUN --mount=type=cache,id=pnpm,target=/pnpm/store pnpm install

FROM base as mobile

VOLUME ["/app/node_modules", "/app/apps/mobile/node_modules", "/app/apps/web/node_modules"]

COPY --from=install /app/apps/mobile/node_modules /app/apps/mobile/node_modules
COPY --from=install /app/node_modules /app/node_modules

WORKDIR /app/apps/mobile

CMD ["pnpm", "run", "start"]

FROM base as web

VOLUME ["/app/node_modules", "/app/apps/web/node_modules"]

COPY --from=install /app/node_modules /app/node_modules

WORKDIR /app/apps/web

CMD ["pnpm", "run", "dev", "--host"]
